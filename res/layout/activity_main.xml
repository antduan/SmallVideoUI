<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_page_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <FrameLayout
            android:id="@+id/main_page_real_page_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/frameMenu"
            android:layout_alignParentTop="true"
            android:background="@color/black" >
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="1dp"
                android:paddingTop="5dp" >

                <FrameLayout
                    android:id="@+id/main_page_bottom_frame_home"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center" >

                        <ImageView
                            android:id="@+id/main_page_bottom_frame_home_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/main_page_bottom_tab_home_selector" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/main_page_bottom_frame_home_image"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="1dp"
                            android:text="@string/main_page_bottom_tab_home"
                            android:textColor="@color/main_page_bottom_text_color"
                            android:textSize="12sp" />
                    </RelativeLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/main_page_bottom_frame_hot_rank"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center" >

                        <ImageView
                            android:id="@+id/main_page_bottom_frame_hot_rank_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/main_page_bottom_tab_hot_rank_selector" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/main_page_bottom_frame_hot_rank_image"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="1dp"
                            android:text="@string/main_page_bottom_tab_hot_rank"
                            android:textColor="@color/main_page_bottom_text_color"
                            android:textSize="12sp" />
                    </RelativeLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/main_page_bottom_frame_message"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center" >

                        <ImageView
                            android:id="@+id/main_page_bottom_frame_message_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/main_page_bottom_tab_message_selector" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/main_page_bottom_frame_message_image"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="1dp"
                            android:text="@string/main_page_bottom_tab_message"
                            android:textColor="@color/main_page_bottom_text_color"
                            android:textSize="12sp" />
                    </RelativeLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/main_page_bottom_frame_my"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center" >

                        <ImageView
                            android:id="@+id/main_page_bottom_frame_my_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/main_page_bottom_tab_my_selector" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/main_page_bottom_frame_my_image"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="1dp"
                            android:text="@string/main_page_bottom_tab_my"
                            android:textColor="@color/main_page_bottom_text_color"
                            android:textSize="12sp" />
                    </RelativeLayout>
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>

        <ImageView
            android:id="@+id/main_page_bottom_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignTop="@+id/frameMenu"
            android:layout_centerInParent="true"
            android:layout_marginBottom="-10dp"
            android:layout_marginTop="-15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/main_page_bottom_tab_add_selector" />
    </RelativeLayout>

    <ListView
        android:id="@+id/main_page_left_slide_list"
        android:layout_width="@dimen/navdrawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        android:choiceMode="singleChoice"
        android:divider="#33000000"
        android:dividerHeight="0.1dp"
        android:drawSelectorOnTop="false" >
    </ListView>

</android.support.v4.widget.DrawerLayout>