<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="5dp" >

    <ImageView
        android:id="@+id/fragment_message_list_item_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp" />

    <LinearLayout
        android:id="@+id/fragment_message_list_item_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="22dp"
        android:layout_toRightOf="@id/fragment_message_list_item_image"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/fragment_message_list_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="center"
            android:text="@string/main_page_slide_head_text_hi"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/fragment_message_list_item_text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/main_page_slide_head_text_hi"
            android:textColor="#99000000"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="22dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/fragment_message_list_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/main_page_slide_head_text_hi"
            android:textColor="#99000000"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/fragment_message_list_item_text_message_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/fragment_message_new_badge"
            android:gravity="center" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/fragment_message_list_item_linear"
        android:layout_below="@+id/fragment_message_list_item_linear"
        android:layout_marginTop="10dp"
        android:background="#F2F2F2" />

</RelativeLayout>