<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_page_drawer_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <android.support.v4.view.ViewPager
        android:id="@+id/home_page_view_page"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/home_page_tabs" />

    <com.xinwei.smallvideo.widget.PagerSlidingTabStrip
        android:id="@+id/home_page_tabs"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/main_pager_tab_height"
        android:background="@color/main_page_action_bar_color" >
    </com.xinwei.smallvideo.widget.PagerSlidingTabStrip>

</RelativeLayout>